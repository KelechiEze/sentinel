# ====================
# SERVER CONFIGURATION
# ====================
PORT=5000
NODE_ENV=development

# ====================
# DATA EXPORT CONFIGURATION
# ====================
EXPORT_DIR=./csv-exports
BACKUP_ENABLED=true
MAX_FILE_SIZE_MB=10

# ====================
# CORS CONFIGURATION
# ====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================
# GOOGLE SHEETS INTEGRATION
# ====================
# Enable/disable Google Sheets upload
GOOGLE_SHEETS_ENABLED=true

# Option 1: OAuth 2.0 Credentials (for user-based access)
GOOGLE_CLIENT_ID=your_oauth_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_oauth_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/callback

# Option 2: Service Account (Recommended for automation)
USE_SERVICE_ACCOUNT=true
GOOGLE_PROJECT_ID=takeover-444211
GOOGLE_CLIENT_EMAIL=your-new-service-account@takeover-444211.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY_ID=your_new_private_key_id_here
# ⚠️ IMPORTANT: Replace \n with actual newlines when using in code
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_NEW_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
GOOGLE_CLIENT_ID=your_service_account_client_id_here
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40takeover-444211.iam.gserviceaccount.com

# Option 3: JSON file path (alternative to above)
GOOGLE_CREDENTIALS_PATH=./secure-keys/google-service-account.json

# Optional Google Drive folder ID
GOOGLE_DRIVE_FOLDER_ID=null

# ====================
# SECURITY SETTINGS
# ====================
SKIP_UPLOAD=false
CONTINUOUS_EXPORT=false
DATA_RETENTION_DAYS=90

# ====================
# LOGGING
# ====================
LOG_LEVEL=info
LOG_REQUESTS=true